<!doctype html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/normalize.css?<%= rev %>" />
    <link rel="stylesheet" type="text/css" href="/css/main.css?<%= rev %>" />
    <style>
        body {
            text-align: center;
        }
        svg {
            width: 50px;
            height: 50px;
            margin: 0 0 10px 0;
            fill:black !important;
        }

        .svg-demo {
            display: inline-block;
            padding: 15px;
            margin: 8px 4px 8px 4px;
            width: 25%;
            min-width: 180px;
            max-width: 220px;
            border-top: 1px solid #414141;
            border-bottom: 1px solid #414141;
            box-sizing: border-box;
            background-color: #f3f3f3;
            text-align: center;
        }
    </style>
<head>
<body>
{{{svg}}}
{{#each icons}}
    <div class="svg-demo">
        <svg>
            <use xlink:href="#{{name}}" />
        </svg>
        <h2>{{title}}</h2>
    </div>
{{/each}}
</body>
</html>
